<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Tekbuk" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Tekbuk" parent="Base.Theme.Tekbuk" />
    <style name="Theme.MyApp" parent="Theme.Material3.DayNight.NoActionBar" />



    <!-- ⭐ ADD THIS NEW STYLE BLOCK ⭐ -->
    <style name="PagtatayaRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="buttonTint">@color/one</item>
        <item name="android:textColor">@color/one</item>
    </style>

    <!-- Style for the Activity Title in the Dashboard (TULA, SANAYSAY, etc.) -->
    <style name="DashboardTopicTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/one</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style for the Score TextView in the Dashboard -->
    <style name="DashboardScore">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>