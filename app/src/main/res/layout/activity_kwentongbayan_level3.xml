<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/one"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        tools:context=".GawainContent.KWENTONGBAYAN_level3">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:fontFamily="sans-serif-black"
            android:text="Level 3: Ibahagi Mo!"
            android:textColor="@color/four"
            android:textSize="32sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvInstructions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="24dp"
            android:justificationMode="inter_word"
            android:lineSpacingMultiplier="1.2"
            android:text="Panuto: Basahin ang mga katanungan at piliin ang titik ng tamang sagot."
            android:textColor="@color/four"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitle" />

        <TextView
            android:id="@+id/tvQuestion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="16dp"
            android:justificationMode="inter_word"
            android:lineSpacingMultiplier="1.2"
            android:text="Bakit kailangang piliin nang mabuti ang lugar na iyong titirahan? Ano ang mga dapat isa-alang-alang sa pagpili ng lugar na tirahan?"
            android:textColor="@color/four"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvInstructions" />

        <TextView
            android:id="@+id/tvRequirement"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="16dp"
            android:justificationMode="inter_word"
            android:lineSpacingMultiplier="1.2"
            android:text="Ipaliwanag ang iyong sagot gamit ang HINDI BABABA SA TATLONG PANGUNGUSAP."
            android:textColor="@color/four"
            android:textSize="18sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvQuestion" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="32dp"
            app:cardBackgroundColor="@color/four"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvRequirement">

            <EditText
                android:id="@+id/etLevel3Answer"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@null"
                android:gravity="top|start"
                android:hint="Isulat dito ang iyong sagot..."
                android:inputType="textMultiLine"
                android:padding="20dp"
                android:textColor="@color/one"
                android:textColorHint="@color/six"
                android:textSize="18sp" />

        </com.google.android.material.card.MaterialCardView>

        <Button
            android:id="@+id/btnSubmitLevel3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/two"
            android:padding="16dp"
            android:text="Ipasa ang Sagot"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/cardInput" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>