<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fourpointfive"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Menu Button -->
        <ImageView
            android:id="@+id/menuButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/burger"
            android:layout_marginBottom="20dp"
            android:layout_gravity="start"
            android:contentDescription="Menu" />

        <!-- Title Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/titleCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/six">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:src="@drawable/logo"
                    android:padding="6dp"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/Appname1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ᜆᜒᜃ᜔ᜊᜓᜃ᜔"
                        android:textColor="@color/fourpointfive"
                        android:textSize="36sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/Appname2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TEKBUK"
                        android:textColor="@color/fourpointfive"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/Content1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pag-aaral ng Panitikang Filipino"
                        android:textColor="@color/fourpointfive"
                        android:textSize="13sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Grid of Cards -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:orientation="horizontal"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:rowCount="3">

            <com.example.tekbuk.MainMenuCardView
                android:id="@+id/cardPaksa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cardDescription="Pangunahing ideya ng aralin."
                app:cardImage="@drawable/paksa"
                app:cardTitle="PAKSA" />

            <com.example.tekbuk.MainMenuCardView
                android:id="@+id/cardGawain"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cardDescription="Mga aktibidad para sa pagkatuto."
                app:cardImage="@drawable/gawain"
                app:cardTitle="GAWAIN" />

            <com.example.tekbuk.MainMenuCardView
                android:id="@+id/cardPagtataya"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cardDescription="Pagsusuri ng iyong natutunan."
                app:cardImage="@drawable/pagtataya"
                app:cardTitle="PAGTATAYA" />

            <com.example.tekbuk.MainMenuCardView
                android:id="@+id/cardRepleksyon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cardDescription="Pagbabahagi ng iyong pananaw."
                app:cardImage="@drawable/repleksyon"
                app:cardTitle="REPLEKSYON" />

            <com.example.tekbuk.MainMenuCardView
                android:id="@+id/cardMarka"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_margin="6dp"
                app:cardDescription="Kabuuang resulta ng iyong pagganap."
                app:cardImage="@drawable/marka"
                app:cardTitle="MARKA / ISKOR" />
        </GridLayout>

        <!-- Version -->
        <TextView
            android:id="@+id/versionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="v-1.0.0"
            android:textColor="@color/black"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp" />

    </LinearLayout>
</ScrollView>
