<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/one"
    tools:context=".MainActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/menuButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/burger"
            android:contentDescription="Menu"
            android:padding="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>



        <!--_____________________________________________APP NAME____________________________________________-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="72dp"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/Appname1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ᜆᜒᜃ᜔ᜊᜓᜃ᜔"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="50sp"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="20sp"
            android:autoSizeMaxTextSize="70sp"
            android:autoSizeStepGranularity="2sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/Appname2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TEKBUK"
            android:textColor="@color/black"
            android:autoSizeTextType="uniform"
            android:textSize="17sp"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeMaxTextSize="27sp"
            android:autoSizeStepGranularity="2sp"
            app:layout_constraintTop_toBottomOf="@id/Appname1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/Content1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pag-aaral ng Panitikang Filipino"
            android:textColor="@color/black"
            android:autoSizeTextType="uniform"
            android:textSize="20sp"
            android:autoSizeMinTextSize="8sp"
            android:autoSizeMaxTextSize="30sp"
            android:autoSizeStepGranularity="2sp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/Appname2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="v-1.0.0"
            android:textColor="@color/black"
            android:layout_marginRight="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!--_____________________________________________BUTTONS____________________________________________-->

        <ScrollView
            android:id="@+id/scrollContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toBottomOf="@id/Content1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/gridMainMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:alignmentMode="alignMargins"
                app:columnCount="2"
                app:useDefaultMargins="true">

                <!-- 1️⃣ LAYUNIN -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardLayunin"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    app:layout_columnWeight="1"
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="#B3FBF9F1"
                    app:strokeColor="@color/gray"
                    app:strokeWidth="1dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:elevation="6dp"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:layout_gravity="center"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/number1"
                            android:layout_marginEnd="16dp"
                            app:tint="@color/black" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:text="LAYUNIN"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMinTextSize="10sp"
                                android:autoSizeMaxTextSize="18sp"
                                android:autoSizeStepGranularity="1sp"
                                android:paddingBottom="5dp"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"/>

                            <TextView
                                android:text="Mga layuning dapat makamit."
                                android:textColor="@color/black"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMinTextSize="8sp"
                                android:autoSizeMaxTextSize="16sp"
                                android:autoSizeStepGranularity="1sp"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"/>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- 2️⃣ PAKSA -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardPaksa"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    app:layout_columnWeight="1"
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="#B3FBF9F1"
                    app:strokeColor="@color/gray"
                    app:strokeWidth="1dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:elevation="6dp"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:layout_gravity="center"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/number2"
                            android:layout_marginEnd="16dp"
                            app:tint="@color/black" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:text="PAKSA"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMinTextSize="10sp"
                                android:autoSizeMaxTextSize="18sp"
                                android:autoSizeStepGranularity="1sp"
                                android:paddingBottom="5dp"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"/>

                            <TextView
                                android:text="Pangunahing paksa ng aralin."
                                android:textColor="@color/black"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMinTextSize="8sp"
                                android:autoSizeMaxTextSize="16sp"
                                android:autoSizeStepGranularity="1sp"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"/>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- 3️⃣ GAWAIN -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardGawain"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    app:layout_columnWeight="1"
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="#B3FBF9F1"
                    app:strokeColor="@color/gray"
                    app:strokeWidth="1dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:elevation="6dp"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:layout_gravity="center"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/number3"
                            android:layout_marginEnd="16dp"
                            app:tint="@color/black" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:text="GAWAIN"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMinTextSize="10sp"
                                android:autoSizeMaxTextSize="18sp"
                                android:autoSizeStepGranularity="1sp"
                                android:paddingBottom="5dp"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"/>

                            <TextView
                                android:text="Mga gawain at pagsasanay."
                                android:textColor="@color/black"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMinTextSize="8sp"
                                android:autoSizeMaxTextSize="16sp"
                                android:autoSizeStepGranularity="1sp"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"/>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- 4️⃣ PAGTATAYA -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardPagtataya"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    app:layout_columnWeight="1"
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="#B3FBF9F1"
                    app:strokeColor="@color/gray"
                    app:strokeWidth="1dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:elevation="6dp"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:layout_gravity="center"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/number4"
                            android:layout_marginEnd="16dp"
                            app:tint="@color/black" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:text="PAGTATAYA"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMinTextSize="10sp"
                                android:autoSizeMaxTextSize="18sp"
                                android:autoSizeStepGranularity="1sp"
                                android:paddingBottom="5dp"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"/>

                            <TextView
                                android:text="Pagsusulit o pagtataya."
                                android:textColor="@color/black"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMinTextSize="8sp"
                                android:autoSizeMaxTextSize="16sp"
                                android:autoSizeStepGranularity="1sp"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"/>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- 5️⃣ REPLEKSYON -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardRepleksyon"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    app:layout_columnWeight="1"
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="#B3FBF9F1"
                    app:strokeColor="@color/gray"
                    app:strokeWidth="1dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:elevation="6dp"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:layout_gravity="center"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/number5"
                            android:layout_marginEnd="16dp"
                            app:tint="@color/black" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:text="REPLEKSYON"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMinTextSize="10sp"
                                android:autoSizeMaxTextSize="18sp"
                                android:autoSizeStepGranularity="1sp"
                                android:paddingBottom="5dp"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"/>

                            <TextView
                                android:text="Pagbabalik-tanaw sa aralin."
                                android:textColor="@color/black"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMinTextSize="8sp"
                                android:autoSizeMaxTextSize="16sp"
                                android:autoSizeStepGranularity="1sp"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"/>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- 6️⃣ MARKA / ISKOR -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardIskor"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    app:layout_columnWeight="1"
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="#B3FBF9F1"
                    app:strokeColor="@color/gray"
                    app:strokeWidth="1dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:elevation="6dp"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:layout_gravity="center"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/number6"
                            android:layout_marginEnd="16dp"
                            app:tint="@color/black" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:text="MARKA / ISKOR"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMinTextSize="10sp"
                                android:autoSizeMaxTextSize="18sp"
                                android:autoSizeStepGranularity="1sp"
                                android:paddingBottom="5dp"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"/>

                            <TextView
                                android:text="Mga resulta ng pagsusulit."
                                android:textColor="@color/black"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMinTextSize="8sp"
                                android:autoSizeMaxTextSize="16sp"
                                android:autoSizeStepGranularity="1sp"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"/>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </androidx.gridlayout.widget.GridLayout>
        </ScrollView>

<!--_____________________________________________ENDS OF BUTTONS____________________________________________-->

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

<!--_____________________________________________Navitaion Bar____________________________________________-->

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_drawer_menu"
        android:background="@color/four"
        app:itemTextColor="@color/black"

        />

</androidx.drawerlayout.widget.DrawerLayout>

