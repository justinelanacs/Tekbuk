<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fourpointfive"
    tools:context=".GawainContent.SANAYSAY_level2">

    <!-- TIMER -->
    <TextView
        android:id="@+id/timerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:00"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_margin="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lastScoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Last Score: 0/0\nAttempts Taken: 0/3"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/timerText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- START BUTTON -->
    <Button
        android:id="@+id/startBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#493400"
        android:text="Start Quiz"
        android:textColor="@color/fourpointfive"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- QUIZ CARD -->
    <androidx.cardview.widget.CardView
        android:id="@+id/quizCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mainbutton_bg"
            android:padding="20dp">

            <!-- QUESTION -->
            <TextView
                android:id="@+id/questionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/fourpointfive"
                android:layout_marginBottom="15dp" />

            <!-- CHOICES -->
            <RadioGroup
                android:id="@+id/choicesGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/choiceA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choice A"
                    android:textColor="@color/fourpointfive"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/choiceB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choice B"
                    android:textColor="@color/fourpointfive"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/choiceC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choice C"
                    android:textColor="@color/fourpointfive"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/choiceD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choice D"
                    android:textColor="@color/fourpointfive"
                    android:textSize="18sp" />
            </RadioGroup>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <!-- BUTTONS -->
    <LinearLayout
        android:id="@+id/buttonLayout"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/quizCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/prevBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/fourpointfive"
            android:backgroundTint="#493400"
            android:text="Previous" />

        <Button
            android:id="@+id/nextBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textColor="@color/fourpointfive"
            android:backgroundTint="#493400"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp" />

        <Button
            android:id="@+id/finishBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/fourpointfive"
            android:backgroundTint="#493400"
            android:text="Finish" />

    </LinearLayout>

    <!-- SCORE CARD -->
    <androidx.cardview.widget.CardView
        android:id="@+id/scoreCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@drawable/mainbutton_bg"
            android:gravity="center_horizontal">

            <!-- Score Text -->
            <TextView
                android:id="@+id/finalScoreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score: 0/5\nTime Taken: 0m 0s"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/fourpointfive"
                android:gravity="center"
                android:layout_marginBottom="20dp" />

            <!-- Buttons Horizontal Layout -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/retakeBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Retake Quiz"
                    android:textColor="@color/fourpointfive"
                    android:backgroundTint="#493400"
                    android:visibility="gone"
                    android:layout_marginEnd="20dp"/>

                <Button
                    android:id="@+id/finishQuizBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Finish Quiz"
                    android:textColor="@color/fourpointfive"
                    android:backgroundTint="#493400"
                    android:visibility="gone"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
