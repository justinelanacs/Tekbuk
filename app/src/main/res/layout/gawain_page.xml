<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/one"
    android:padding="16dp"
    tools:context=".HomapageContent.GawainPageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

        <!-- === TULA === -->
        <include layout="@layout/item_gawain_card"
            android:id="@+id/cardTula"
            android:tag="tula"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dp" />

        <!-- === SANAYSAY === -->
        <include layout="@layout/item_gawain_card"
            android:id="@+id/cardSanaysay"
            android:tag="sanaysay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dp" />

        <!-- === DAGLI === -->
        <include layout="@layout/item_gawain_card"
            android:id="@+id/cardDagli"
            android:tag="dagli"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dp" />

        <!-- === TALUMPATI === -->
        <include layout="@layout/item_gawain_card"
            android:id="@+id/cardTalumpati"
            android:tag="talumpati"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dp" />

        <!-- === KWENTONG BAYAN === -->
        <include layout="@layout/item_gawain_card"
            android:id="@+id/cardKwentongBayan"
            android:tag="kwentong_bayan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dp" />

    </LinearLayout>
</ScrollView>
